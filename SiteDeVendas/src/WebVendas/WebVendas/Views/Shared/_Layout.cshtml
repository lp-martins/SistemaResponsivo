<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VendasOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/lightslider.css" />
    <script type="text/javascript" src="~/js/Jquery.js"></script>
    <script type="text/javascript" src="~/js/lightslider.js"></script>
</head>
<body>

    <header class="header-menu">
        <input type="checkbox" id="btn_menu">
        <label for="btn_menu">&#9776;</label>

        <nav class="menu">
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Página inicial</a>
                </li>
                <li>
                    <a href="#">Produtos</a>
                    <ul>
                        <li><a asp-area="" asp-controller="Produtos" asp-action="Camisa">Camisas</a></li>
                        <li><a asp-area="" asp-controller="Produtos" asp-action="Relogio">Relógios</a></li>
                        <li><a asp-area="" asp-controller="Produtos" asp-action="Whisky">Whisky</a></li>
                    </ul>
                </li>
                <li>
                    <a asp-area="" asp-controller="Contato" asp-action="Index">Contato</a>
                </li>
            </ul>
        </nav>
        <div class="CarrinhoCompras">
            <ul>
                <li><a asp-area="" asp-controller="CarrinhoDeCompras" asp-action="Index">Carrinho de compras  <img src="~/img/img-Carrinho.png"> <span class="fa-counter">0</span></a></li>
            </ul>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="footer-menu">
        <nav class="texto-footer">
            <a>&copy; Projeto Integrador - Sistemas Responsivos</a><br>
            <a>Integrantes: Célio Santos, Grabriel Munhoz, Luiz de Paula e Talita Landim.</a>
        </nav>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/lightslider.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
